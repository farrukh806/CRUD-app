<%- include('partials/header') %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form
		class="ui form"
		action="/blogs/<%= blog.id %>?_method=PUT"
		method="POST"
	>
		<div class="field">
			<label>Title</label>
			<input
				type="text"
				name="title"
				value="<%= blog.title %>"
				required
			/>
		</div>

		<div class="field">
			<label>Blog</label>
			<textarea name="description"><%= blog.description%></textarea>
		</div>
		<input class="ui blue basic button" type="submit" />
	</form>
</div>

<%- include('partials/footer') %>
